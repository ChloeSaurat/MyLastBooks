<% if notice %>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <span class="flash-body"><%= notice %></span>
    <span class="flash-close" data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </span>
  </div>
<% end %>

<% if alert %>
  <div class="flash flash-danger alert alert-dismissible fade show" role="alert">
    <span class="flash-body"><%= alert %></span>
    <span class="flash-close" data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </span>
  </div>
<% end %>




