<div class="container">

  <h1>Create a List</h1>

  <form>
    <div class="form-group">
      <label for="exampleFormControlInput1">Name:</label>
      <input type="name" class="form-control" id="exampleFormControlInput1" placeholder="My favorites books">
    </div>

    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description:</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Add this List</button>
      </div>
    </div>

  </form>

</div>
